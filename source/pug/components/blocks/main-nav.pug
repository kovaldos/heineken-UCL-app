mixin main-nav()
	-
		const data = {
			links: [
				{
					href: "#",
					text: "How toÂ play",
					dataModal: "how-to-play",
					icon: "icon-game-controller",
				},
				{
					href: "#",
					text: "Prizes",
					dataModal: "prizes",
					icon: "icon-gift",
				},
				{
					href: "#",
					text: "Leaderboard",
					dataModal: "leaderboard",
					icon: "icon-article",
					classModifier: "is-hidden"
				},
				{
					href: "#",
					text: "Terms",
					dataModal: "terms",
					icon: "icon-list-numbers",
				},
			],
		}

	nav.main-nav
		.main-nav__wrapper 
			ul.main-nav__list
				each item in data.links
					li.main-nav__list-item(class=item.classModifier)
						a.main-nav__list-link(href=item.href data-open-modal=item.dataModal)
							+icon(item.icon, 26, 26).main-nav__list-link-icon
							span.main-nav__list-link-name=item.text